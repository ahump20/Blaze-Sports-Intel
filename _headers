# Cloudflare Pages Headers Configuration
# Optimized for Blaze Sports Intelligence production deployment at blazesportsintel.com

/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=()
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://static.cloudflareinsights.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https: wss:; frame-ancestors 'none'
  
  # CORS Headers for Sports APIs
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, POST, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization, X-Requested-With
  Access-Control-Max-Age: 86400
  
  # Performance Headers
  Cache-Control: public, max-age=3600, s-maxage=7200
  Vary: Accept-Encoding
  
  # WebGL and Three.js Support
  Cross-Origin-Embedder-Policy: unsafe-none
  Cross-Origin-Opener-Policy: same-origin

# Static Assets - Long Cache
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  
# JavaScript Files - Moderate Cache
/*.js
  Cache-Control: public, max-age=86400, s-maxage=172800
  Content-Type: application/javascript; charset=utf-8
  
# CSS Files - Moderate Cache  
/*.css
  Cache-Control: public, max-age=86400, s-maxage=172800
  Content-Type: text/css; charset=utf-8
  
# HTML Files - Short Cache for SPA
/*.html
  Cache-Control: public, max-age=300, s-maxage=600
  Content-Type: text/html; charset=utf-8
  
# Root HTML - No Cache for SPA updates
/
  Cache-Control: no-cache, no-store, must-revalidate
  Content-Type: text/html; charset=utf-8
  
# API Endpoints - No Cache
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0
  
# Sports Data APIs - Short Cache
/data/*
  Cache-Control: public, max-age=300, s-maxage=600
  Content-Type: application/json; charset=utf-8
  
# Fonts - Long Cache
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *
  
# Images - Long Cache with WebP Support
/images/*
  Cache-Control: public, max-age=2592000, s-maxage=5184000
  Vary: Accept
  
# Generated Assets - Long Cache
/generated-*
  Cache-Control: public, max-age=31536000, immutable
  
# Service Worker - No Cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  
# Manifest - Short Cache
/manifest.json
  Cache-Control: public, max-age=3600
  Content-Type: application/json; charset=utf-8